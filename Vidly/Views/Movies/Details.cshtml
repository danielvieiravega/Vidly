@using System.Globalization
@model Vidly.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul class="list-group">
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToString(CultureInfo.InvariantCulture)</li>
    <li>Date Added: @Model.ReleaseDate.ToString(CultureInfo.InvariantCulture)</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>

